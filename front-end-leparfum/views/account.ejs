  </header>
  
  <section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100" style="background-color: rgb(255, 255, 255);">
        <div class="row ms-5 me-5 d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12" id="content-container">
                <div class="row">
                   <!-- Contenido que se mostrará según la selección del usuario -->
                    <div id="general" class="content col-12">
                        <!-- Contenido para la sección General -->
                        <p class="fs-5 border-bottom">General</p>
                        <div class="row g-2 align-items-center mb-5">
                            <div class="col-auto">
                                <label for="nameUser">
                                    Nombre
                                </label>
                            </div>
                            <div class="col-auto">
                                <input class="form-control" id="nameUser" placeholder="Juan Perez Castro" readonly>
                                    <!--Traer el nombre del usuario logeado-->
                                </input>
                            </div>
                            <div class="col-auto">
                                <label for="emailUser">
                                    Correo Electrónico
                                </label>
                            </div>
                            <div class="col-auto">
                                <input class="form-control" id="emailUser" placeholder="example@domain.cl" readonly>
                                    <!--Traer el correo del usuario logeado-->
                                </input>
                            </div>
                            <div class="col-auto">
                                <label for="paswordUser">
                                    Contraseña
                                </label>
                            </div>
                            <div class="col-auto">
                                <input class="form-control" id="paswordUser" type="password" placeholder="************" readonly>
                                    <!--Traer la password del usuario logeado todo cifrado-->
                                </input>
                            </div>
                            <div class="col-12 text-end pe-5">
                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#generalModal">
                                    Editar
                                </button>

                                <!-- Modal General-->
                                <div class="modal fade" id="generalModal" tabindex="-1" aria-labelledby="generalModal" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="generalModalLabel">General</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body container text-start">
                                            <form action="">
                                                <div class="mb-3">
                                                    <label for="nombre">Nombre</label>
                                                    <input type="text" name="nombre" class="form-control" oninput="this.value = this.value.replace(/[^a-zA-Z- ]/g, '').slice(0, 40);">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="contraseña">Contraseña Actual</label>
                                                    <input type="password" name="contraseña" class="form-control" oninput="this.value = this.value.replace(/[^a-zA-Z- ]/g, '').slice(0, 20);">
                                                    <!--Se debe crear un script o validacion de que la contraseña actual corresponde a la actual
                                                    esto se puede hacer en el mismo momento de enviar el update, se valida, si pasa se modifica
                                                    y si no pasa, envia una alerta al usuario-->
                                                    <label for="newPass">Contraseña Nueva</label>
                                                    <input type="password" name="newPass" class="form-control" required>
                                                    <label for="newPass2">Repita la Nueva Contraseña</label>
                                                    <input type="password" name="newPass2" class="form-control" required>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="button" class="btn btn-primary">Guardar Cambios</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="contact-info" class="content col-12">
                        <!-- Contenido para la sección Información de Contacto -->
                        <p class="fs-5 border-bottom">Información de Contacto</p>
                        <div class="row g-2 align-items-center mb-5">
                            <div class="col-auto">
                                <label for="phoneUser">
                                    Celular de Contacto
                                </label>
                            </div>
                            <div class="col-auto">
                                <input class="form-control" id="phoneUser" placeholder="+56991234567" readonly>
                                    <!--Traer el celular del usuario logeado-->
                                </input>
                            </div>
                            <div class="col-12 text-end pe-5">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#contactoModal">
                                    Editar
                                </button>
                                <!-- Modal Contacto-->
                                <div class="modal fade" id="contactoModal" tabindex="-1" aria-labelledby="generalModal" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="generalModalLabel">Contacto</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body container text-start">
                                            <form action="">
                                                <div class="mb-3">
                                                    <label for="celular">Celular</label>
                                                    <input placeholder="912345678" type="text" name="celular" class="form-control" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 9);">
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            <button type="button" class="btn btn-primary">Guardar Cambios</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="addresses" class="content col-12">
                        <!-- Contenido para la sección Direcciones -->
                        <p class="fs-5 border-bottom">Direcciones</p>
                        <div class="row g-2 align-items-center mb-5">
                            <div class="col-auto">
                                <label for="addressUser">
                                    Dirección
                                </label>
                            </div>
                            <div class="col-auto">
                                <input class="form-control" id="addressUser" placeholder="Los Alpes 01823, Temuco" readonly>
                                    <!--Traer la direccion del usuario logeado-->
                                </input>
                            </div>
                            <div class="col-12 text-end pe-5">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#direccionesModal">
                                    Editar
                                </button>
                                <!-- Modal Direcciones-->
                                <div class="modal fade" id="direccionesModal" tabindex="-1" aria-labelledby="generalModal" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="generalModalLabel">Direcciones</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body container text-start">
                                            <form action="">
                                                <div class="mb-3">
                                                    <label for="direccion">Direccion</label>
                                                    <input type="text" name="direccion" class="form-control">
                                                </div>
                                            
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                        <button type="button" class="btn btn-primary">Guardar Cambios</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="preferences" class="content col-12">
                        <!-- Contenido para la sección Preferencias -->
                        <p class="fs-5 border-bottom">Preferencias</p>
                        <div class="row g-2 align-items-center mb-5">
                            <div class="col-auto">
                                <label for="addressUser">
                                    Listado de Preferencias
                                </label>
                            </div>
                            <div id="tipoContainer" class="col-auto">
                                <!--Se rellena automaticamente desde el filtro.js-->
                            </div>
                            <div class="col-12 text-end pe-5">
                                <!--Este boton debe guardar las preferencias, hacer un update a las preferencias del usuario-->
                                <button class="btn btn-success">
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
  </section>
  
