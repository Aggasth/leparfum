    <div class="alert alert-success">
      <%= successFlash %>
    </div>
  <% } %>
  
  <!-- Mostrar mensajes flash de error (por ejemplo, al ingresar credenciales incorrectas) -->
  <% if (typeof errorFlash !== 'undefined') { %>
    <div class="alert alert-danger">
      <%= errorFlash %>
    </div>
  <% } %>

